{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "example"]
}
